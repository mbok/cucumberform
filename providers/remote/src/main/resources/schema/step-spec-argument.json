{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Step argument specification",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Argument name",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
    },
    "schema": {
      "type": "object",
      "title": "JSON schema for argument value",
      "default": {
      }
    },
    "strict": {
      "type": "boolean",
      "title": "Strictness of argument schema validation",
      "default": false
    }
  }
}